{
  "name": "@kvcpr/leocode-recruitment-task",
  "version": "1.0.1",
  "description": "Recuriment task for Leocode",
  "main": "src/main.ts",
  "repository": "https://github.com/kvcpr/leocode-recruitment-task.git",
  "author": "Kacper Polak <kacper@hypequality.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "lib/*"
  ],
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.build.json",
    "start": "node -r tsconfig-paths/register build/src/main.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --exit-child src/main.ts",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext ts",
    "test": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16",
    "yarn": "^1.20.0"
  },
  "eslintConfig": {
    "extends": [
      "@hypedevs"
    ],
    "ignorePatterns": [
      "build"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 50,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "projects": [
      "<rootDir>"
    ],
    "preset": "ts-jest",
    "displayName": "api",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "clearMocks": true,
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  },
  "dependencies": {
    "@hypedevs/fastify-typed-route": "",
    "argon2": "^0.28.3",
    "bluebird": "^3.7.2",
    "dotenv": "^14.3.2",
    "envalid": "^7.2.2",
    "fastify": "^3.27.0",
    "fastify-swagger": "^4.13.1",
    "jose-node-cjs-runtime": "^4.4.0",
    "openapi-types": "^10.0.0",
    "pino-pretty": "^7.5.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.12.0"
  },
  "devDependencies": {
    "@hypedevs/eslint-config": "https://github.com/hypedevs/eslint-config.git",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/node": "16",
    "@types/supertest": "^2.0.11",
    "eslint": "^8.8.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "jest-mock-extended": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}